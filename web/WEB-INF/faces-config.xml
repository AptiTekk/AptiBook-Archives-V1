<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/panel/account.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>my</from-outcome>
            <to-view-id>/panel/my.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>manage</from-outcome>
            <to-view-id>/panel/manage.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>settings</from-outcome>
            <to-view-id>/admin/settings.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>reserve</from-outcome>
            <to-view-id>/panel/reserve.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>notifications</from-outcome>
            <to-view-id>/panel/notifications.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>ReservationManagementController</managed-bean-name>
        <managed-bean-class>com.AptiTekk.Agenda.web.controllers.ReservationManagementController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
