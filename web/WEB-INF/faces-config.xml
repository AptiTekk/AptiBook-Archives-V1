<faces-config
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
        version="2.2">
    <application>
        <view-handler>com.aptitekk.aptibook.web.viewHandlers.TenantViewHandler</view-handler>
    </application>
    <!--<lifecycle>
        <phase-listener>com.aptitekk.aptibookok.web.JSFPhaseListener</phase-listener>
    </lifecycle>-->
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>secure</from-outcome>
            <to-view-id>/secure/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>myAccount</from-outcome>
            <to-view-id>/secure/my/account.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>myReservations</from-outcome>
            <to-view-id>/secure/my/reservations.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>manage</from-outcome>
            <to-view-id>/secure/manage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>settings</from-outcome>
            <to-view-id>/secure/admin/settings.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>*</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>notifications</from-outcome>
            <to-view-id>/secure/my/notifications.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
