<!-- Created 9/9/2016-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <!-- Adds a column to Tenant that determines if it is active or not.
    Also adds a timeSetInactive column so that inactive tenants may be deleted after a certain number of days. -->
    <changeSet id="11" author="MitchTalmadge">
        <addColumn tableName="tenant">
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="timesetinactive" type="TIMESTAMPTZ" />
        </addColumn>
    </changeSet>

</databaseChangeLog>