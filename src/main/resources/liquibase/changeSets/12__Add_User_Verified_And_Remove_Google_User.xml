<!-- Created 9/12/2016-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <!-- Adds "verified" and "verificationcode" columns to user, and removes the "googleuser" column from user. -->
    <changeSet id="12" author="PashaShestakov">
        <addColumn tableName="user">
            <column name="verified" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="verificationcode" type="varchar(255)" defaultValueBoolean="false"/>
        </addColumn>
        <dropColumn tableName="user" columnName="googleuser"/>
    </changeSet>

</databaseChangeLog>