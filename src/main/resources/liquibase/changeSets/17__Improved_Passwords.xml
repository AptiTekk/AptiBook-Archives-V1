<!-- Created 10/1/2016-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <!-- Changes password column of user from byte to string, renames column. -->
    <changeSet id="17" author="MitchTalmadge">
        <modifyDataType tableName="user" columnName="password" newDataType="TEXT"/>
        <renameColumn tableName="user" oldColumnName="password" newColumnName="hashedpassword" />
    </changeSet>

</databaseChangeLog>