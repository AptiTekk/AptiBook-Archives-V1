<!-- Created 9/21/2016-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <!-- Removes the Reservation date column and modifies the timeStart and timeEnd columns to allow for reservations that span dates. -->
    <changeSet id="14" author="MitchTalmadge">
        <addColumn tableName="reservation">
            <column name="starttime" type="TIMESTAMPTZ"/>
            <column name="endtime" type="TIMESTAMPTZ"/>
        </addColumn>

        <sqlFile path="liquibase/changeSets/sql/14.sql"/>

        <dropColumn tableName="reservation" columnName="timestart"/>
        <dropColumn tableName="reservation" columnName="timeend"/>
        <dropColumn tableName="reservation" columnName="date"/>

        <modifyDataType tableName="reservation" columnName="datecreated" newDataType="TIMESTAMPTZ"/>
    </changeSet>

</databaseChangeLog>